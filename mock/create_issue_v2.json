{
  "border": false,
  "className": [
    "font14"
  ],
  "style": {},
  "table": [
    [
      {
        "type": "hidden",
        "name": "id",
        "defaultValue": "1001"
      },
      {
        "type": "label",
        "className": [
          "text-right font16 color-super-gray",
          {
            "sm": 3
          }
        ],
        "defaultValue": "工单ID"
      },
      {
        "type": "label",
        "defaultValue": "100001",
        "className": [
          "",
          {
            "sm": 6,
            "offset": 0
          }
        ]
      }
    ],
    [
      {
        "type": "label",
        "className": [
          "text-right font16 color-super-gray",
          {
            "sm": 3
          }
        ],
        "defaultValue": "工单类型"
      },
      {
        "type": "select",
        "name": "issue_type",
        "defaultValue": "",
        "className": [
          "",
          {
            "sm": 6,
            "offset": 0
          }
        ],
        "title": "工单类型",
        "style": {
          "padding": 0
        },
        "placeholder": "请选择工单类型",
        "validate": {
          "required": true
        },
        "validateMessage": "请选择工单"
      }
    ],
    [
      {
        "type": "label",
        "className": [
          "text-right font16 color-super-gray",
          {
            "sm": 3
          }
        ],
        "defaultValue": "客户"
      },
      {
        "type": "select",
        "id": "customer",
        "name": "customer",
        "target": "device",
        "defaultValue": "",
        "className": [
          "color-red",
          {
            "sm": 6,
            "offset": 0
          }
        ],
        "title": "提示信息",
        "style": {
          "padding": 0
        },
        "placeholder": "请填选择客户",
        "validate": {
          "required": true
        },
        "validateMessage": "选择客户"
      }
    ],
    [
      {
        "type": "label",
        "className": [
          "text-right font16 color-super-gray",
          {
            "sm": 3
          }
        ],
        "defaultValue": "设备"
      },
      {
        "type": "select",
        "id": "device",
        "name": "device",
        "source": "customer",
        "defaultValue": "",
        "className": [
          "color-red",
          {
            "sm": 6,
            "offset": 0
          }
        ],
        "title": "提示信息",
        "style": {
          "padding": 0
        },
        "placeholder": "请填选择设备",
        "validate": {
          "required": true
        },
        "validateMessage": "选择设备"
      }
    ],
    [
      {
        "type": "label",
        "className": [
          "text-right font16 color-super-gray",
          {
            "sm": 3
          }
        ],
        "defaultValue": "联系人"
      },
      {
        "type": "select",
        "name": "contact",
        "sync": "tel",
        "defaultValue": "",
        "className": [
          "",
          {
            "sm": 6,
            "offset": 0
          }
        ],
        "title": "联系人",
        "style": {
          "padding": 0
        },
        "placeholder": "请选择联系人",
        "validate": {
          "required": true
        },
        "validateMessage": "请选择联系人"
      }
    ],
    [
      {
        "type": "label",
        "className": [
          "text-right font16 color-super-gray",
          {
            "sm": 3
          }
        ],
        "defaultValue": "电话"
      },
      {
        "type": "input",
        "name": "tel",
        "defaultValue": "",
        "className": [
          "",
          {
            "sm": 6,
            "offset": 0
          }
        ],
        "title": "电话",
        "style": {},
        "placeholder": "请填写电话",
        "validate": {
          "reg": "^1[3|5|7|8][0-9]{9}$|^\\d{3,4}-\\d{8}$|^\\d{8}$",
          "required": true
        },
        "validateMessage": "验证失败",
        "validatePosition": "right"
      }
    ],
    [
      {
        "type": "label",
        "className": [
          "text-right font16 color-super-gray",
          {
            "sm": 3
          }
        ],
        "defaultValue": "描述"
      },
      {
        "type": "textarea",
        "name": "desc",
        "className": [
          "text-left",
          {
            "sm": 6,
            "offset": 0
          }
        ],
        "defaultValue": "",
        "placeholder": "请填写问题描述",
        "validate": {
          "required": false
        },
        "validateMessage": "验证失败"
      }
    ],
    [
      {
        "type": "div",
        "className": [
          "clearfix text-center",
          {
            "sm": 9,
            "offset": 0
          }
        ],
        "style": {
          "padding": "5px 0"
        },
        "children": [
          {
            "type": "button",
            "className": [
              "",
              {
                "sm": 10
              }
            ],
            "action": {
              "type": "submit",
              "handler": "/api/submit"
            },
            "defaultValue": "提交"
          }
        ]
      }
    ]
  ]
}

